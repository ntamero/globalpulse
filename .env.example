# GlobalPulse Environment Configuration
# Copy this file to .env and fill in your values

# Database
DB_PASSWORD=changeme_secure_password
DATABASE_URL=postgresql://globalpulse:${DB_PASSWORD}@postgres:5432/globalpulse

# Redis
REDIS_URL=redis://redis:6379/0

# AI Providers (at least one required)
GROQ_API_KEY=
GROQ_MODEL=llama-3.3-70b-versatile

# Translation
GOOGLE_TRANSLATE_API_KEY=
# Leave empty to use LibreTranslate fallback (self-hosted)

# News APIs (optional, enhances coverage)
NEWSAPI_KEY=
GDELT_ENABLED=true

# ---------------------------------------------------------------------------
# OSINT Data Sources (free registration required)
# ---------------------------------------------------------------------------

# NASA FIRMS - Satellite Fire Detection
# Register free: https://firms.modaps.eosdis.nasa.gov/api/area/
NASA_FIRMS_API_KEY=

# ACLED - Armed Conflict Location & Event Data
# Register free: https://acleddata.com/register/
ACLED_ACCESS_TOKEN=
ACLED_EMAIL=

# Cloudflare Radar - Internet Outage Detection
# Get free token: https://developers.cloudflare.com/radar/
CLOUDFLARE_API_TOKEN=

# ---------------------------------------------------------------------------
# Monetization
# ---------------------------------------------------------------------------
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
GOOGLE_ADSENSE_CLIENT_ID=

# App Config
SITE_URL=https://globalpulse.io
SITE_NAME=GlobalPulse
DEFAULT_LOCALE=en
FETCH_INTERVAL_MINUTES=5
AI_BRIEFING_INTERVAL_HOURS=1

# Server
NODE_ENV=production
PORT=3000
API_PORT=8000
